%hr
.functions.pull-left
  = link_to 'Add Member', new_admin_user_path(organization_id: @organization), class: 'btn btn-primary'
.row
%br
%h3
  Organization Members
%table.table.table-striped
  %thead
    %tr
      %th
        Name
      %th
        Email
      %th
        Role
      %th
        Actions
  %tbody
    - @organization.users.each do |f|
      %tr
        %td
          = f.full_name
        %td
          = f.email
        %td
          = f.organization_role
        %td
          = link_to '', edit_admin_user_path(f, org_id: @organization.id), class: 'icon-edit', id: 'edit'
              
          = link_to '', admin_user_path(f, org_id: @organization.id), method: 'delete', class: 'icon-trash', data: {confirm: 'Are you sure that you want to delete this user?'}, id: 'delete'
